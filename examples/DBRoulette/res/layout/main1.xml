<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/linkBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link" />

  

    <Button
        android:id="@+id/uploadBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload" />

    <Button
        android:id="@+id/downloadBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="download" />

      <Button
        android:id="@+id/createFolderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="new folder" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" 
           >

          <EditText
              android:id="@+id/sourceAddr"
              android:layout_width="120dp"
              android:layout_height="wrap_content"
              android:layout_weight="2.96"
              android:ems="10"
              android:inputType="textEmailAddress"
               />

             
          

          <Button
              android:id="@+id/sourceAddrBtn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.88"
              android:text="source" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >

          <EditText
              android:id="@+id/destinationAddr"
              android:layout_width="120dp"
              android:layout_height="wrap_content"
              android:layout_weight="2.96"
              android:ems="10"
              android:inputType="textEmailAddress" 
              />

          <Button
              android:id="@+id/destinationAddrBtn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.88"
              android:text="destination..." />

      </LinearLayout>

</LinearLayout>